<div class="container">

  <div class="row pt-5">
    <div class="col-md-7">
      <%= image_tag @portfolio_item.main_image %>
    </div>
    <div class="col-md-5">
      <h1>Portfolio <%= params[:id] %></h1>

      <p><%= @portfolio_item.title %></p>
      <hr>
      <p><%= @portfolio_item.subtitle %></p>
      <p><%= @portfolio_item.body %></p>
      <hr>
      <h3>Technologies Used</h3>
      <% @portfolio_item.technologies.each do |t| %>
        <p> <%= t.name %> </p>
      <%end%>

    </div>
  </div>

  <% if logged_in?(:site_admin) %>
    <div class="col-md-12 pt-5">
      <p><%= link_to "Edit Item", edit_portfolio_path(@portfolio_item), class: "btn btn-warning" %></p>
      <p><%= link_to "Delete Item", portfolio_path(@portfolio_item),
                                    method: :delete,
                                    data: { confirm: 'Are you sure?' }, class: "btn btn-danger"%></p>
    </div>
  <% end %>
</div>
