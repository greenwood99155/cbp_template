<h1>Portfolio <%= params[:id] %></h1>
<p><%= link_to "Back to index", portfolios_path %></p>

<p><%= @portfolio_item.title %></p>
<p><%= @portfolio_item.subtitle %></p>
<p><%= @portfolio_item.body %></p>
<%= image_tag @portfolio_item.thumb_image %>
<p><%= link_to "Edit Item", edit_portfolio_path(@portfolio_item) %></p>
<p><%= link_to "Delete Item", portfolio_path(@portfolio_item), method: :delete, data: { confirm: 'Are you sure?' } %></p>
