<%= form_with(model: @portfolio_item, local: true) do |f| %>

  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :subtitle %>
        <%= f.text_area :subtitle, class: 'form-control'  %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, class: 'form-control', rows: "12"  %>
      </div>
    </div>


    <hr>

    <div class="col-md-12">
      <h2>Technologies used:</h2>
      <div>
        <%= f.fields_for :technologies do |technology_form| %>
          <%= render 'technology_fields', f: technology_form %>
        <% end %>

        <div>
          <%= link_to_add_association 'Add Technology', f, :technologies %>
        </div>

        <div class="form-group">
          <%= f.label :main_image %>
          <%= f.text_area :main_image, class: 'form-control'  %>
        </div>

        <div class="form-group">
          <%= f.label :thumb_image %>
          <%= f.text_area :thumb_image, class: 'form-control'  %>
        </div>

        <div class="form-group">
          <%= f.submit "Save Portfolio Item", class: "btn btn-primary btn-block"%>
        </div>
      </div>
    </div>
  <% end %>
